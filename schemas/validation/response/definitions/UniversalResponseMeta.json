{
	"title"      : "UniversalResponseMeta",
	"type"       : "object",
	"required"   : [
		"requestId",
		"seriesId",
		"operationId",
		"stage",
		"service"
	],
	"properties" : {
		"requestId"   : {
			"$ref" : "UuidField"
		},
		"seriesId"    : {
			"$ref" : "UuidField"
		},
		"operationId" : {
			"type"      : "string",
			"pattern"   : "^[A-Z][a-z0-9][A-Za-z0-9]+$",
			"minLength" : 4,
			"maxLength" : 40
		},
		"stage"       : {
			"type"        : "string",
			"description" : "The API environment name.",
			"pattern"     : "^[a-zA-Z0-9]+$",
			"minLength"   : 2,
			"maxLength"   : 40
		},
		"service"     : {
			"type"       : "object",
			"required"   : [
				"name",
				"version"
			],
			"properties" : {
				"name"    : {
					"type"      : "string",
					"pattern"   : "^sls-service-[a-z\\-]+$",
					"minLength" : 15,
					"maxLength" : 40
				},
				"version" : {
					"type"      : "string",
					"pattern"   : "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(-(0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(\\.(0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*)?(\\+[0-9a-zA-Z-]+(\\.[0-9a-zA-Z-]+)*)?$",
					"minLength" : 5,
					"maxLength" : 40
				}
			}
		}
	}
}

